@{
}

@model List<StudentPortal.Web.Models.Entities.Student>

<a class="btn btn-gradient" asp-controller="Student" asp-action="Add">Add New Student</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>
                    <a class="btn btn-gradient2" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">Edit</a>

                    
                </td>
            </tr>
        }
        
        
    </tbody>
</table>